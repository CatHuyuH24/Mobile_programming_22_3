<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/solo_image_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_solo_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:background="@drawable/baseline_arrow_back_24"
                android:contentDescription="@string/solo_back_btn"/>

            <TextView
                android:id="@+id/txtView_solo_image_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_purple"
                android:gravity="center_vertical|center_horizontal"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="48dp"
                android:textSize="24sp"
                android:textColor="@android:color/primary_text_dark" />

        </LinearLayout>

        <ImageView
        android:id="@+id/imgView_solo_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|fill"
        android:layout_weight="2"
        android:paddingVertical="16dp"
        android:contentDescription="@string/solo_default_image_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/border_form"
        android:gravity="center">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_share_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_arrow_circle_up_24" />
        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_solo_set_background"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_adjust_24"
            android:contentDescription="@string/solo_set_phone_background_btn" />

        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_solo_add_to_album"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_add_circle_outline_24"
            android:contentDescription="@string/solo_add_to_album_btn" />

        <Space
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_solo_delete_from_album"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_delete_outline_24"
            android:contentDescription="@string/solo_delete_from_album_btn" />
    </LinearLayout>
</LinearLayout>