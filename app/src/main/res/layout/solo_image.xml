<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/solo_image_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_solo_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:background="@drawable/back_triangle_shape"
        android:contentDescription="@string/solo_back_btn"
        android:translationX="-10dp"/>

    <TextView
        android:id="@+id/txtView_solo_image_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_purple"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginEnd="48dp"
        android:textColor="@android:color/primary_text_dark" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView_solo_image"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_gravity="center|fill"
        android:layout_weight="2"
        android:paddingVertical="16dp"
        android:contentDescription="@string/solo_default_image_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_share_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_style"
                android:textSize="16sp"
                android:text="Share"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_solo_set_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_style"
                android:textSize="16sp"
                android:text="@string/solo_set_phone_background_btn"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_solo_add_to_album"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@string/solo_add_to_album_btn"
                android:textColor="@android:color/white"
                android:layout_weight="1" />
            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_solo_delete_from_album"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@string/solo_delete_from_album_btn"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
