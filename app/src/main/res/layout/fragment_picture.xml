<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|fill"
        android:paddingHorizontal="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Pictures"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/changeGridIconButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_dehaze_24"
            android:contentDescription="Menu icon button"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/btn_random_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Random Image"
            android:layout_marginEnd="8dp"/>
        <Spinner
            android:id="@+id/spinner_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- RecyclerView for displaying images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/selected_images_number"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:background="@color/light_purple"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"
            android:visibility="invisible"
            android:layout_weight="4"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/delete_images_btn"
            android:layout_gravity="center"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/btn_delete_image"
            android:layout_weight="1"
            android:visibility="invisible"
            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

</LinearLayout>
